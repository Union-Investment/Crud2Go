	title="Compound Search Beispiel">
	<page>
		<compound-search />
		<table id="table" sortable="true">
			<database-query datasource="test">
				<query><![CDATA[
					SELECT * FROM test_crud2
				]]></query>
			</database-query>
			<columns>
				<column name="ID" title="ID" primary-key="true" editable="true" />
