<?xml version="1.0" encoding="UTF-8"?>
<portlet xmlns="http://www.unioninvestment.de/eai/portal/crud-portlet"
	title="Export von generierten Spaltenwerten">
	<page>
		<table id="table" row-height="30" export="xls">
			<database-query datasource="test">
				<query><![CDATA[
					SELECT * FROM test_crud2
				]]></query>
			</database-query>
			<columns>
				<column name="ID" title="ID" primary-key="true"/>
				<column name="CNUMBER5_2" title="Zahl" editable="true" />
				<column name="CDATE" editable="false" />
				<column name="CTIMESTAMP" />
				<column name="CVARCHAR5_NN" editable="true" />
				<column name="CNUMBER5_2_NN" editable="true" />
				<column name="CDATE_NN" editable="true" />
				<column name="CTIMESTAMP_NN" hidden="true"/>
				<column name="TESTDATA" editable="true" validate="maxlen=80,required" validation-message="Pflichtfeld, Max. 80 Zeichen sind erlaubt"/>
			    <column name="Generiert1" generator="new Label('abcde')" generated-value="'abcde'" generated-type="java.lang.String"/>
			    <column name="Generiert2" generator="new Label('1234')" generated-value="1234" generated-type="java.lang.Integer"/>
			    <column name="Generiert3" generator="new Label('1234.0')" generated-value="1234.0d" generated-type="java.lang.Double"/>
			    <column name="Generiert4" generator="new Label('1234.0')" generated-value="1234.0" generated-type="java.math.BigDecimal"/>
			    <column name="Generiert5" generator='new Label("${row.values.ID+1}")' generated-value="row.values.ID+1.0" generated-type="java.math.BigDecimal"/>
			    <column name="Generiert6" generator="new Label('null')" generated-value="null" generated-type="java.math.BigDecimal"/>
			</columns>
		</table>
	</page>
</portlet>












